{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ANC16",
	"patterns": [
		{
			"include": "#instructions"
		},
		{
			"include": "#directives"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#scopes"
		}
	],
	"repository": {
		"instructions": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\\b(?i)(ada|adb|ana|anb|aret|clc|cld|cli|clo|cls|cmah|cmbh|cmpa|cmpb|cmpi|cpuid|dea|deb|dei|dej|ina|inb|ini|inj|jcc|jcs|jeq|jmp|jnc|jne|jns|joc|jos|jsp|kill|lda|ldah|ldal|ldb|ldbh|ldbl|lddr|ldi|ldj|ldsp|limh|liml|lemh|leml|ldsr|msb|nop|ora|orb|pop|psh|read|rest|ret|sed|sei|semh|seml|ses|shl|shr|simh|siml|stah|stb|stbh|sti|stj|stpc|stsr|sua|sub|sys|tab|tabh|tabl|tadr|taemh|taeml|tahj|tai|taimh|taiml|tba|tbah|tbal|tbhj|tbi|tisp|tspb|wrte|wrti|xora|xorb)\\b"
				},
				{
					"name": "keyword.other",
					"match": "\\b(?i)(CALL|SYSCALL|BYTE|WORD|SIZEOF|RESERVE)\\b"
				}
			]
		},
		"directives": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(?i)(ORG|USE|STDCALL|SYSLIB|AS|IMPORT|IF|ENDIF|ELSE|ELIF|USED|NOT)\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line",
				"match": ";.+"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b(0x[0-9A-Fa-f]+|[0-9]+|0b[0-1]+|0o[0-7]+)\\b"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\w+(?=(:))"
			}]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.anc16",
					"match": "\\\\."
				}
			]
		},
		"symbols": {
			"patterns": [{
				"name":"keyword.operator",
				"match": "([$]|[+]|[-]|[/])"
			}]
		},
		"scopes": {
			"patterns": [
				{
					"name": "keyword.other",
					"match": "\\b(?i)(LOCAL|GLOBAL)\\b"
				}
			]
		}
	},
	"scopeName": "source.anc16"
}